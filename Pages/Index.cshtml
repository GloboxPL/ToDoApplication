@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="wrapper fadeInDown">
  <div id="formContent">
 
    <div class="fadeIn first">
      <h2 class="forms mt-4">Sign In Page</h2>
    </div>

    <form class="mt-3">
        <input type="text" id="email" class="fadeIn second" placeholder="Email" asp-for="@Model.Email" />
        <input type="password" id="password" class="fadeIn third" placeholder="Password" asp-for="@Model.Password">
        <input type="submit" class="fadeIn fourth mt-4" value="Sign In">
    </form>

    <div id="formFooter">
      <a class="nav-link text-primary" asp-area="" asp-page="/Register">Register</a>
    </div>

  </div>
</div>