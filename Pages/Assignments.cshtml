@page
@model ToDo.Pages.AssignmentsModel
@using Models
@{
    ViewData["Title"] = "Assignments";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page-handler="OnGetSignOutAsync">Sign Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container mt-5 assignments-wrapper">
    <div class="row my-5">
        <div class="col">
            <div class="text-center">
                <h4 class="">Assignments</h4>
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-center mt-3 mb-5">
        <div class="col-4">
            <div class="text-center">
                <p>Select assignments:</p>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Assignments Type
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-page-handler="AllAssignments">All</a>
                        <a class="dropdown-item" asp-page-handler="DoneAssignments">Done</a>
                        <a class="dropdown-item" asp-page-handler="NotDoneAssignments">Not Done</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="text-center">
                <p>Filter by:</p>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Selection Option
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-page-handler="SortedCollectionByDeadlineAscending">Deadline -
                            Ascending</a>
                        <a class="dropdown-item" asp-page-handler="SortedCollectionByDeadlineDescending">Deadline -
                            Descending</a>
                        <a class="dropdown-item" asp-page-handler="SortedCollectionByImportanceAscending">Importance -
                            Ascending</a>
                        <a class="dropdown-item" asp-page-handler="SortedCollectionByImportanceDescending">Importance -
                            Descending</a>
                        <a class="dropdown-item" asp-page-handler="SortedCollectionByNameAscending">Name - Ascending</a>
                        <a class="dropdown-item" asp-page-handler="SortedCollectionByNameDescending">Name -
                            Descending</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="text-center">
                <p>Add a new assignment: </p>
                <a class="btn btn-primary" asp-area="" asp-page="/Edit">Add assignment</a>
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-center my-5">
        <div class="col-12">
            <table class="table table-striped table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Deadline</th>
                        <th scope="col">Important</th>
                        <th scope="col">Done</th>
                        <th scope="col">Description</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Assignment assignment in Model.AssignmentsToDisplay)
                    {
                        <tr>
                            <th scope="row">@assignment.Id</th>
                            <td>@assignment.Name</td>
                            <td>@assignment.Deadline</td>
                            <td>@assignment.IsImportant</td>
                            <td>@assignment.IsDone</td>
                            <td>@assignment.Description</td>
                            <td>
                                <a class="btn btn-primary" asp-area="" asp-page="/Edit"
                                asp-route-itemid=@assignment.Id>Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
