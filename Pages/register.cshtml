@page
@model RegisterModel
@{
    ViewData["Title"] = "Home page";
}

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <h2 class="forms mt-4">Register</h2>
    </div>

    <!-- Login Form -->
    <form class="mt-3" method="post">
        <input type="text" id="email" class="fadeIn second" placeholder="Name" asp-for="@Model.Name" />
        <input type="text" id="email" class="fadeIn second" placeholder="Surname" asp-for="@Model.Surname" />
        <input type="text" id="email" class="fadeIn second" placeholder="Email" asp-for="@Model.Email" />
        <input type="password" id="password" class="fadeIn third" placeholder="Password" asp-for="@Model.Password">
        <input type="submit" class="fadeIn fourth mt-4" value="Register">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="nav-link text-primary" asp-area="" asp-page="/Index">Back to signin in</a>
    </div>

  </div>
</div>