@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <h2>REGISTER</h2>
    </div>

    <!-- Login Form -->
    <form>
      <input type="text" id="email" class="fadeIn second" name="email" placeholder="Email">
      <input type="text" id="password" class="fadeIn third" name="password" placeholder="Password">
      <input type="text" id="name" class="fadeIn third" name="name" placeholder="Name">
      <input type="text" id="surname" class="fadeIn third" name="surname" placeholder="Surname">
      <input type="submit" class="fadeIn fourth" value="Register">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="nav-link text-dark" asp-area="" asp-page="/Index">Login</a>
    </div>

  </div>
</div>